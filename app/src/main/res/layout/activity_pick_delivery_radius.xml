    <TextView
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="#44000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/label_instructions"
        android:text="@string/activity_pick_delivery_radius_label_instructions_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />




    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/copyrights_map"
        android:text="@string/activity_pick_delivery_radius_copyrights_map_text"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />





    <SeekBar
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="#44000000"
        android:id="@+id/seekbar_map"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/copyrights_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />



    <TextView
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="#44000000"
        app:layout_constraintBottom_toTopOf="@id/seekbar_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/label"
        android:text="@string/activity_pick_delivery_radius_label_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />




