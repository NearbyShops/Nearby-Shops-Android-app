<?xml version="1.0" encoding="utf-8"?>




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/list_item"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


<!--    android:layout_width="150dp"-->
<!--    android:layout_height="100dp"-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content">


        <ImageView
            android:background="@color/backgroundTinted"
            android:scaleType="centerCrop"
            android:id="@+id/market_photo"
            android:layout_width="120dp"
            android:layout_height="60dp" />

        <ProgressBar
            android:id="@+id/progress_bar_select"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/market_photo"
            app:layout_constraintBottom_toBottomOf="@id/market_photo"
            app:layout_constraintStart_toStartOf="@id/market_photo"
            app:layout_constraintEnd_toEndOf="@id/market_photo"
            android:layout_width="35dp"
            android:layout_height="35dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>






    <TextView
        android:padding="3dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_marginTop="0dp"
        android:textSize="15sp"
        android:text="Farmers Garden"
        android:id="@+id/market_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:visibility="gone"
        android:textSize="12sp"
        android:id="@+id/market_city"
        android:text="Pune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>