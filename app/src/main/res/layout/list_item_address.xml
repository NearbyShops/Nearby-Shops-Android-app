
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_delivery_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#22000000"
    android:padding="10dp">



    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item_address_item_new_name_text"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/deliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item_address_item_new_deliveryAddress_text"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border" />


    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item_address_item_new_phoneNumber_text"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borderTwo" />


    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/blueGrey800"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borderThree">

        <TextView
            android:id="@+id/editButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blueGrey800"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/list_item_address_item_new_editButton_text"
            android:textColor="#ffffff"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/removeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@color/gplus_color_4"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/list_item_address_item_new_removeButton_text"
            android:textColor="#ffffff"
            android:textSize="17dp" />

    </LinearLayout>


    <TextView
        android:textSize="17sp"
        android:textColor="@color/white"
        android:padding="7dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_bar"
        android:id="@+id/button_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mapbox_blue"
        android:text="@string/list_item_address_item_new_button_select_text" />


</LinearLayout>