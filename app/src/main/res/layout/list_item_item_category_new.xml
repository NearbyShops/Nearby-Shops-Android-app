<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/colorPrimaryDark"
    android:id="@+id/list_item"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:padding="0dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <ImageView
            android:background="#44000000"
            android:id="@+id/categoryImage"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,3:5"
            app:srcCompat="@drawable/ic_nature_people_white_48px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="0dp"/>


        <TextView
            android:padding="5dp"
            android:id="@+id/name"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:textSize="20sp"
            android:gravity="start"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@id/categoryImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/categoryImage"
            app:layout_constraintEnd_toEndOf="@id/categoryImage"
            android:text="@string/list_item_item_category_new_name_text"/>



</androidx.constraintlayout.widget.ConstraintLayout>

