<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_delivery_guy_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_delivery_guy_home">


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="321dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="180dp"
        app:layout_constraintGuide_percent="0.5" />


    <LinearLayout
        android:id="@+id/header_strip"
        android:padding="10dp"
        android:background="@color/light_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/header"
            android:textSize="20sp"
            android:text="@string/content_delivery_guy_home_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:background="@color/blueGrey800"
            android:layout_width="1dp"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/log_out_button"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:text="Log Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <!--<TextView-->
        <!--android:padding="10dp"-->
        <!--android:background="@color/light_grey"-->
        <!--android:id="@+id/header"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--android:textSize="20sp"-->
        <!--android:text="@string/content_delivery_guy_home_header_text"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content" />-->


    <ImageView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:id="@+id/image_shop_list"
        android:background="@color/orangeDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_strip"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:visibility="gone"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Dashboard"
        app:layout_constraintBottom_toBottomOf="@+id/image_shop_list"
        app:layout_constraintLeft_toLeftOf="@+id/image_shop_list"
        app:layout_constraintRight_toRightOf="@+id/image_shop_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />



    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#88000000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/image_shop_list"
        android:id="@+id/border_one"
        android:layout_width="0dp"
        android:layout_height="1dp" />

    <TextView
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/content_delivery_guy_home_headline_one_text"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/border_one"
        android:id="@+id/headline_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <TextView
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#88000000"
        app:layout_constraintTop_toBottomOf="@+id/headline_one"
        android:id="@+id/border_two"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <ImageView
        android:paddingTop="10dp"
        android:paddingBottom="40dp"
        app:srcCompat="@drawable/ic_face_black_24px"
        android:layout_marginTop="10dp"
        android:id="@+id/image_edit_profile"
        android:background="@color/blueGrey800"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border_two"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="5dp" />


    <TextView
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/content_delivery_guy_home_headline_one_text"
        app:layout_constraintBottom_toBottomOf="@+id/image_edit_profile"
        app:layout_constraintLeft_toLeftOf="@+id/image_edit_profile"
        app:layout_constraintRight_toRightOf="@+id/image_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />



    <ImageView
        android:paddingTop="10dp"
        android:paddingBottom="40dp"
        app:srcCompat="@drawable/ic_dashboard_white_24px"
        android:layout_marginTop="10dp"
        android:id="@+id/image_dashboard"
        android:background="@color/gplus_color_2"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border_two"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

        
    <TextView
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/content_delivery_guy_home_headline_two_text"
        app:layout_constraintBottom_toBottomOf="@+id/image_dashboard"
        app:layout_constraintLeft_toLeftOf="@+id/image_dashboard"
        app:layout_constraintRight_toRightOf="@+id/image_dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>
