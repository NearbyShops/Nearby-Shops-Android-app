        <!--
        android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
        -->




        <LinearLayout
            android:id="@+id/labels_delivery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="@id/shopImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shopImage">

            <TextView
                android:id="@+id/indicator_pick_from_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/orangeDark"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/list_item_shop_item_layout_indicator_pick_from_shop_text"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/indicator_home_delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:background="@color/phonographyBlue"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/list_item_shop_item_layout_indicator_home_delivery_text"
                android:textColor="@color/white" />


        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/deliveryCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="3dp"
            android:text="@string/list_item_shop_item_layout_deliveryCharge_text"
            app:layout_constraintBottom_toTopOf="@id/labels_delivery"
            app:layout_constraintStart_toEndOf="@id/shopImage" />


        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blueGrey800"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="@string/list_item_shop_item_layout_distance_text"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="@id/labels_delivery"
            app:layout_constraintBottom_toTopOf="@id/deliveryCharge" />


        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gplus_color_2"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/list_item_shop_item_layout_rating_text"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/distance"
            app:layout_constraintStart_toStartOf="@id/labels_delivery"/>

        <TextView
            android:id="@+id/ratings_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/list_item_shop_item_layout_ratings_count_text"
            app:layout_constraintBottom_toBottomOf="@id/rating"
            app:layout_constraintLeft_toRightOf="@id/rating"
            app:layout_constraintStart_toEndOf="@id/rating" />


    </androidx.constraintlayout.widget.ConstraintLayout>





    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_item_shop_item_layout_itemsAvailable_text"
            android:id="@+id/itemsAvailable"

            android:layout_alignBottom="@+id/shopImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <LinearLayout

            android:layout_gravity="center_vertical"
            android:layout_marginRight="0dp"
            android:layout_alignLeft="@id/itemPrice"
            android:layout_below="@id/shopImage"
            android:background="#000000"
            android:layout_width="1dp"
            android:layout_height="20dp"/>

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemPrice"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/shopImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />




    </LinearLayout>

