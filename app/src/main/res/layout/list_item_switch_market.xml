<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <LinearLayout
        android:padding="7dp"
        android:gravity="center_vertical"
        android:background="@color/buttonColorDark"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">




        <ImageView
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ic_business_24"
            android:layout_width="30dp"
            android:layout_height="30dp" />




        <!--    android:text="504 Market, Dream Park City, Pune, hellp and "-->

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginStart="10dp"
                android:layout_weight="1.3"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="Current Market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:maxLines="1"
                android:id="@+id/market_name"
                android:layout_marginStart="10dp"
                android:layout_weight="1.3"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Daily Essentials | Pune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



<!--        <LinearLayout-->
<!--            android:layout_weight="1"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="match_parent"/>-->


        <TextView
            android:layout_marginEnd="0dp"
            android:id="@+id/changeLocation"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Change\nMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>



