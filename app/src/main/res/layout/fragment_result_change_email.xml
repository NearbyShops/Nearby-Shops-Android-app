<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <Button
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_accent"
            android:id="@+id/finish_button"
            android:text="@string/fragment_result_change_email_finish_button_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="45dp" />


        <TextView
            android:id="@+id/border_next"
            android:background="#55000000"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/finish_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp" />



        <androidx.core.widget.NestedScrollView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/border_next"
            android:layout_width="0dp"
            android:layout_height="0dp">




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:id="@+id/message"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/check_icon"
                        app:srcCompat="@drawable/ic_check_circle_green"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />



                    <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/check_icon"
                        android:textSize="20sp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/header_message"
                        android:text="@string/fragment_result_change_email_header_message_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="You can now use your new E-mail !"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:id="@+id/account_credentials"
                        android:layout_marginTop="5dp"
                        android:text="@string/fragment_result_change_email_account_credentials_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/header_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>




