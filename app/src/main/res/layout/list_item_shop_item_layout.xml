    <LinearLayout
        android:layout_marginBottom="0dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp">



        <TextView
            android:id="@+id/itemTotal"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:textColor="@color/colorWhite"
            android:background="@color/blueGrey800"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/list_item_shop_item_layout_itemTotal_text"/>



        <ImageView
            android:id="@+id/reduceQuantity"
            android:layout_gravity="center_vertical"
            android:background="@color/grey800"
            app:srcCompat="@drawable/ic_remove_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp" />



        <!--<EditText-->
            <!--android:text="@string/list_item_shop_item_layout_itemQuantity_text"-->
            <!--android:id="@+id/itemQuantity"-->
            <!--android:gravity="center"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:inputType="number"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="match_parent" />-->



        <TextView
            android:textSize="20sp"
            android:text="@string/list_item_shop_item_layout_itemQuantity_text"
            android:id="@+id/itemQuantity"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:layout_width="70dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/increaseQuantity"
            android:layout_gravity="center_vertical"
            android:background="@color/grey800"
            app:srcCompat="@drawable/ic_add_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemsInCart"
            android:textColor="@color/colorWhite"
            android:background="@color/teal"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_item_shop_item_layout_itemsInCart_text"/>

        <TextView
            android:id="@+id/cartTotal"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:background="@color/teal"
            android:padding="5dp"
            android:text="@string/list_item_shop_item_layout_cartTotal_text"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/out_of_stock_indicator"
            android:visibility="gone"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/gplus_color_4"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/list_item_shop_item_layout_out_of_stock_indicator_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />




        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/out_of_stock_indicator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/addToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="0dp"
                android:background="@color/grey800"
                app:srcCompat="@drawable/ic_add_shopping_cart_white_24px"
                android:layout_width="100dp"
                android:layout_height="match_parent" />



            <TextView
                android:id="@+id/textAddToCart"
                android:textSize="24sp"
                android:gravity="right"
                android:layout_marginRight="0dp"
                android:textColor="@color/colorWhite"
                android:background="@color/grey800"
                android:text="@string/list_item_shop_item_layout_textAddToCart_text"
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>





        <ProgressBar
            android:indeterminateTint="@color/buttonColorDark"
            android:visibility="invisible"
            android:id="@+id/progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/addToCart"
            app:layout_constraintEnd_toEndOf="@id/addToCart"
            app:layout_constraintStart_toStartOf="@id/addToCart"
            app:layout_constraintTop_toTopOf="@id/addToCart"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
