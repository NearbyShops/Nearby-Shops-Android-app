


<LinearLayout
    android:background="@drawable/border_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_delivery_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item_address_item_new_name_text"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:lines="1"
        android:layout_marginTop="5dp"
        android:id="@+id/deliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item_address_item_new_deliveryAddress_text"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border" />


    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item_address_item_new_phoneNumber_text"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borderTwo" />



    <TextView
        android:layout_marginTop="10dp"
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>




    <LinearLayout
        android:gravity="end"
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borderThree">


        <TextView
            android:padding="10dp"
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/list_item_address_item_new_editButton_text"
            android:textStyle="bold"
            android:textColor="@color/orangeDark"
            android:textSize="17dp" />


        <TextView
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/blueGrey800"
            android:layout_width="1dp"
            android:layout_height="15dp"/>


        <TextView
            android:padding="10dp"
            android:id="@+id/removeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/list_item_address_item_new_removeButton_text"
            android:textStyle="bold"
            android:textColor="@color/orangeDark"
            android:textSize="17dp" />

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:padding="7dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_bar"
        android:id="@+id/button_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mapbox_blue"
        android:text="@string/list_item_address_item_new_button_select_text" />


</LinearLayout>